order += "ipv6"
order += "disk /"
order += "ethernet enp2s0"
order += "load"
order += "tztime local"

disk "/" {
	format = ": %free (%percentage_free) free"
	low_threshold = "5"
	format_below_threshold = "only %percentage_avail avail"
}

ethernet enp2s0 {
	# if you use %speed, i3status requires the cap_net_admin capability
	format_up = ": %ip (%speed)"
	format_down = "enp2s0 down"
}

load {
	format = ": %5min"
}

tztime local {
	format = ": %Y-%m-%d %H:%M:%S"
}